<%-include("header")-%> 
<div class="background">
      <h3 class="heading">Current Auctioning Car</h3>
      <div class="container">
        <div class="row align-items-start">
          <div class="col">
            <div
              id="carouselExampleFade"
              class="carousel slide carousel-fade carousel-dark"
              data-bs-ride="carousel"
            >
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img
                    src="data:image/<%=item.img1.contentType%>;base64,
                    <%=item.img1.data.toString('base64')%>"
                    class="d-block width"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="data:image/<%=item.img2.contentType%>;base64,
                    <%=item.img2.data.toString('base64')%>"
                    class="d-block width"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="data:image/<%=item.img3.contentType%>;base64,
                    <%=item.img3.data.toString('base64')%>"
                    class="d-block width"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="data:image/<%=item.img4.contentType%>;base64,
                    <%=item.img4.data.toString('base64')%>"
                    class="d-block width"
                    alt="..."
                  />
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleFade"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleFade"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="bottomtexts">
              <h6>Fuel Type : <%= item.fueltype %></h6>
              <h6>Engine : <%= item.eng %> cc</h6>
              <h6>Power : <%= item.pow %> bhp</h6>
              <h4 class="mar"><%= status %></h4>
            </div>
          </div>
          <div class="col col1">
            <h4><%= item.carname %></h4>
            <h5>Starting Bidding Price : ₹ <%= item.startingbidprice %></h5>
            <h5>Current Bidding Price : ₹ <%= item.currentbidprice %></h5>
            <h5  class="time"><%= item.time %></h5>
            <script src="js/auctioncartime.js"></script>
            <div class="line"></div>
            <h6>Car Owner Name : <%= item.carownername %></h6>
            <h6>Location : <%= item.location %></h6>
            <h6>Total KM driven : <%= item.totalkmdriven %> Km</h6>
            <form action="/uploadauction" method="post">
            <div class="form-floating">
              <input
                type="text"
                class="form-control top"
                placeholder="Your Price"
                name="name"
                autocomplete="off"
                required
              />
              <label for="floatingInput">Your Name</label>
            </div>
            <div class="form-floating">
              <input
                type="number"
                class="form-control top"
                placeholder="Your Price"
                name="mobilenumber"
                autocomplete="off"
                required
              />
              <label for="floatingInput">Your Contact Number</label>
            </div>
            <div class="form-floating">
              <input
                type="number"
                class="form-control top"
                placeholder="Your Price"
                name="price"
                autocomplete="off"
                required
              />
              <label for="floatingInput">Your Price (in ₹)</label>
              <button type="submit" class="btn btn-dark btn-md bid">Bid</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

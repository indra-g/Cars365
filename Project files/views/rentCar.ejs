<%-include("header")-%> 
<div class="background">
      <h3 class="heading heading1">Cars available to rent</h3>
      <h4 class="heading1 location">Select your location:</h4>
      <div class="dropdown">
        <button
          class="btn btn-outline-dark dropdown-toggle"
          type="button"
          id="dropdownMenuButton2"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          Bangalore
        </button>
        <ul
          class="dropdown-menu dropdown-menu-dark"
          aria-labelledby="dropdownMenuButton2"
        >
          <li><a class="dropdown-item active" href="#">Hyderabad</a></li>
          <li><a class="dropdown-item" href="#">Chennai</a></li>
          <li><a class="dropdown-item" href="#">Thiruvananthapuram</a></li>
          <li><a class="dropdown-item" href="#">Mumbai</a></li>
        </ul>
      </div>

      <div class="container">
        <div class="row align-items-start">
          <div class="col">
            <div class="card mb-3" style="max-width: 540px">
              <div class="row g-0">
                <div class="col-md-4">
                  <img
                    src="Images/car-sample.jpeg"
                    class="img-fluid rounded-start"
                    alt="car_img"
                  />
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title">Mahindra XUV700</h5>
                    <p class="card-text">Rent Price : ₹12/km</p>
                    <a class="arrow" href="#"
                      ><img src="images/arrow_right_white_48dp.svg" alt="arrow"
                    /></a>
                    <p class="card-text last">
                      Location: Coimbatore, Tamil nadu
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col">
            <div
              id="carouselExampleFade"
              class="carousel slide carousel-fade carousel-dark"
              data-bs-ride="carousel"
            >
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img
                    src="Images/car-sample.jpeg"
                    class="d-block width"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="Images/xuv700-exterior-right-front-three-quarter-2.jpeg"
                    class="d-block width"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="Images/xuv700xuv700leftsideview.jpeg"
                    class="d-block width"
                    alt="..."
                  />
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleFade"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleFade"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="toptexts">
              <h4>Mahindra XUV700</h4>
              <h5>Rent Price : ₹12/Km</h5>
            </div>
            <div class="line1"></div>
            <div class="bottomtexts">
              <h6>Renter name : Manoj S</h6>
              <h6>Location : Coimbatore, Tamil nadu</h6>
              <h6>Total KM driven : 20000 km</h6>
              <h6>Contact Details : +91 1234567890</h6>
              <h6 class="text">
                Contact the Renter for further information regarding advance and
                formalities
              </h6>
              <button type="button" class="btn btn-dark btn-sm button">
                Contact Renter
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
